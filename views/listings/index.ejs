<% layout('/layouts/boylerplate') -%>


    <style>
        .containerr{
            display:flex;
            align-items: center;
        }
        #filters{
            display: flex;
            gap: 2rem; /* space between items */
            overflow-x: auto;
            overflow-x: auto; /* enable horizontal scrolling */
            padding: 1rem; /* some padding for better look */
            -webkit-overflow-scrolling: touch; /* smooth scroll on iOS */
        } 
        #filters::-webkit-scrollbar {
            display: none; /*hide scrollbar */
        }
        .filters{
            flex: 0 0 auto;
            text-align: center;
            margin-right:2rem;
            margin-top: 2rem;
            opacity: 0.70;
        }
        .filters:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filters p{
            font-size: 0.8rem;
        }

        .tax-info{
            display: none;
        }

        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            
            display: flex;
            align-items: center;
            
        }
        
    </style>



<div class="containerr">
   
    <div id="filters" class="col-9">
        <div class="filters">
            <div>
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            
        </div>
        

        <div class="filters">
            <div>
                <i class="fa-solid fa-umbrella-beach"></i>"></i>
                <p>Beaches</p>
            </div>
        </div>
        <div class="filters">
            <div>
                <i class="fa-solid fa-mountain-city"></i>
                <p>Mountains</p>
            </div>
        </div>
        <div class="filters">
            <div>
                <i class="fa-solid fa-hotel"></i>
                <p>Stays</p>
            </div>
        </div>
        <div class="filters">
            <div>
                <i class="fa-solid fa-location-dot"></i>
                <p>Iconic Cities</p>
            </div>
        </div>
        <div class="filters">
            <div>
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
        </div>
        <div class="filters">
            <div>
                <i class="fa-solid fa-wheat-awn"></i>
                <p>Farms</p>
            </div>
        </div> 
        
    </div>
    

    <div class="tax-toggle offset-1 col-2 ">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display taxes</label>
        </div>
    </div>
</div>
    



 
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
        <% for(let listing of allListings) { %>

            <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                <div class="card col" >
                    <img 
                        src="<%= listing.images.url %>"
                        class="card-img-top" 
                        alt="Listing Image"
                        style="height: 20rem"
                    />

                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b>
                            <br />
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night 
                            <i class="tax-info"> &nbsp + <%= 0.18*listing.price%> GST</i><br>
                        </p>
                        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                    </div>
                </div>

                
            </a>
            
            
        <% } %>
</div>
    

   
<script>

        let taxSwitch = document.getElementById('switchCheckDefault');
        taxSwitch.addEventListener('click', ()=>{
        console.log('Switch toggled');
        let taxInfo = document.getElementsByClassName('tax-info');
        
        for(info of taxInfo){
            if(info.style.display != 'inline'){
                info.style.display = 'inline';
            } else {
                info.style.display = 'none';
            }
        }
    });
</script>

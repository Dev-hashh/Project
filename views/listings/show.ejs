<% layout('/layouts/boylerplate') -%>

<div class="row mt-3">
    <div class="col-md-8 col-sm-12 offset-md-3 offset-sm-0">
        <h3><%= listing.title %></h3>
    </div>

    
    <div class="card mx-auto my-3" style="max-width: 600px;">
        <img src="<%= listing.images.url %>" alt="listing image" class="card-img-top mb-2 show-img">
    
        <div class="card-body">
            <p class="card-text">
                <strong>Owned by: </strong>
                <i>
                    <%= listing.owner.username %>
                </i>
            </p>
            <p class="card-text">
                <strong>Description: </strong>
                <%= listing.description %>
            </p>
            <p class="card-text">
                <strong>Location: </strong>
                <%= listing.location %>
            </p>
            <p class="card-text">
                <strong>Country: </strong>
                <%= listing.country %>
            </p>
    
            <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap">
                <p class="card-text mb-2 mb-md-0">
                    <strong>Price: </strong>â‚¹ <%= listing.price.toLocaleString("en-IN") %>
                </p>
                <form method="GET" action="/listings/<%= listing._id %>/Booking">
                    <button class="btn pay-btn">Book & Pay</button>
                </form>
            </div>
        </div>
    </div>


    <%- include('../includes/map', { coords: listing.geometry.coordinates, title: listing.title }) %>

    <br>

    <% if(listing.owner && currentUser && currentUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  offset-3 edit-btn">Edit</a>
        
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-4 dlt-btn">Delete</button>
            </form>
        </div>
    <% } %>
    

    <div class="col-sm-12 col-md-8 offset-sm-0 offset-md-3 mb-md-3">
        <hr/>
        <% if( listing.owner && currentUser && !currentUser._id.equals(listing.owner._id)) { %>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label class="form-label">Rating</label>
                    <div class="star-rating">
                        <% for (let i=5; i>= 1; i--) { %>
                            <input type="radio" id="star<%= i %>" name="reviews[rating]" value="<%= i %>" />
                            <label for="star<%= i %>" title="<%= i %> stars">&#9733;</label>
                            <% } %>
                    </div>
                </div>
            
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Review</label>
                    <textarea id="comment" name="reviews[comment]" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add a review</div>
                </div>
            
                <button class="btn btn-dark">Submit</button>
            </form>
            <hr/>
            
        <% } %>
            
       

        <!-- <h4>All Reviews</h4> -->

        <div class="row review-card ">
            <% if(listing.reviews.length === 0) { %>
                <p class="text-muted">No reviews yet.</p>
            <% } %>

            <% if(listing.reviews.length!==0) { %>
                <h4>All Reviews</h4>
                <% } %>

            <% for(let review of listing.reviews) { %>
                <div class="card mb-2 col-md-5 col-sm-12 ms-3  border border-dark rounded p-3 m-sm-3 p-sm-3">
                    <div class="card-body review-card">
                        <h5 class="card-title">@<%= review.author.username %></h5>
                        <p class="card-text">
                            <%= review.comment %>
                        </p>
                        <p>
                            <%= review.rating%> stars
                        </p>

                        <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-dark btn-sm">Delete</button>
                            </form>
                        <% }  %>  
                        
                        
                    </div>
                </div>
            <%} %>
        </div>
        
        

    </div>
    
</div>




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css">
    <title>Wanderlust</title>

</head>
<body>
    <div class="card col-sm-12 col-md-6 offset-sm-0 offset-md-3 mb-3 w-sm-100 ">
        <div class="card-header bg-primary text-white">
            <i class="fa fa-map-marker-alt"></i> Location Map
        </div>
        <div class="card-body h-sm-10 p-0">
            <div id="map" style="height:400px;" ></div>
        </div>
    </div>
    
    
    <script>
        window.onload = function () {
            console.log("Map script running...");
            console.log("Coordinates received:", "<%= JSON.stringify(coords) %>");

            const coordinates = ["<%= coords[1] %>", "<%= coords[0] %>"];
              
                // Tile Layers
            const standard = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            });

            const dark = L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
                attribution: '© OpenStreetMap contributors & CARTO',
                subdomains: 'abcd',
                maxZoom: 19
            });

            const satellite = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
                attribution: 'Tiles © Esri, Earthstar Geographics, NASA, USGS',
                maxZoom: 18
            });

            // Initialize Map
            const map = L.map('map', {
                center: coordinates, // Your Wanderlust coordinates
                zoom: 13,
                layers: [standard] // Default view
            });

            // Base Maps
            const baseMaps = {
                "Standard": standard,
                "Dark": dark,
                "Satellite": satellite
            };

            // Add Toggle Control
            L.control.layers(baseMaps).addTo(map);

            // Add Marker (for your listing)
            L.marker(coordinates)
                .addTo(map)
                .bindPopup("<%= title %>")
                .openPopup();
            };
    </script>
</body>
</html>
    

